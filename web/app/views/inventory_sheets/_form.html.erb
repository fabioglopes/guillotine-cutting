<%= form_with(model: inventory_sheet, class: "space-y-6") do |form| %>
  <% if inventory_sheet.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(inventory_sheet.errors.count, "erro") %> impedem que esta chapa seja salva:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% inventory_sheet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <!-- Label -->
        <div class="sm:col-span-2">
          <%= form.label :label, "Identificação", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :label, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ex: MDF 15mm Branco" %>
        </div>

        <!-- Width -->
        <div>
          <%= form.label :width, "Largura (mm)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :width, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1830" %>
        </div>

        <!-- Height -->
        <div>
          <%= form.label :height, "Altura (mm)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :height, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "2750" %>
        </div>

        <!-- Thickness -->
        <div>
          <%= form.label :thickness, "Espessura (mm)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :thickness, step: 0.1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "15" %>
        </div>

        <!-- Material -->
        <div>
          <%= form.label :material, "Material", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :material, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "MDF, MDP, Compensado, etc." %>
        </div>

        <!-- Quantity -->
        <div>
          <%= form.label :quantity, "Quantidade Total", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :quantity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "10" %>
          <p class="mt-1 text-sm text-gray-500">Quantidade total em estoque</p>
        </div>

        <!-- Available Quantity -->
        <div>
          <%= form.label :available_quantity, "Quantidade Disponível", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :available_quantity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">Quantidade disponível para uso</p>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <%= form.submit "Salvar Chapa", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm cursor-pointer" %>
      <%= link_to "Cancelar", inventory_sheets_path, class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" %>
    </div>
  </div>
<% end %>

