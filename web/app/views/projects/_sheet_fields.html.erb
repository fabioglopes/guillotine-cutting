<div class="border border-gray-200 rounded-lg p-4 bg-white" data-project-form-target="sheetField">
  <div class="flex justify-between items-start mb-4">
    <h4 class="font-medium text-gray-900">Chapa</h4>
    <button type="button" data-action="click->project-form#removeField" class="text-red-600 hover:text-red-800">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    </button>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="col-span-2">
      <%= f.label :label, "IdentificaÃ§Ã£o", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :label, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent", placeholder: "Ex: MDF 15mm" %>
    </div>

    <div>
      <%= f.label :width, "Largura (mm)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :width, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent", placeholder: "2750" %>
    </div>

    <div>
      <%= f.label :height, "Altura (mm)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :height, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent", placeholder: "1850" %>
    </div>

    <div>
      <%= f.label :quantity, "Quantidade", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :quantity, value: 1, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
    </div>
  </div>

  <%= f.hidden_field :_destroy %>
</div>

